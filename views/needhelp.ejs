<%- include('partials/header'); -%>
    <div class="text-center">
        <h1>Need Help?</h1>
        <p>Drop us a message and we'll get back to you</p>

        <form action="" method="POST">
            <input name="name" class="form-control input_name" type="text" placeholder="Enter your name" required>
            <br>
            <input name="number" class="form-control input_name mt-4" type="text" placeholder="Enter your number" required>
            <br>
            <input name="email" class="form-control input_name mt-4" type="email" placeholder="Enter your email id" required>
            <br>
            <textarea class="form-control input_name mt-4" name="message" id="message" cols="40" rows="5" placeholder="Message" required></textarea>
            <br>
            <input class="btn btn-dark mt-5" type="submit" value="Submit">
        </form>
    </div>
    <%- include('partials/footer'); -%>